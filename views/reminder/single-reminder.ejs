<div class="container">
  <h1 class="page-header">View Reminder</h1>
    <ul class="list-group">
      <li class="list-group-item">
        <h3><strong><%= reminderItem.Title %>: </strong></h3>
        <h4><%= reminderItem.Description %></h4>
        <h4 class="completed">Completed:
          <% if (reminderItem.Completed == true) { %>
            <span class="badge badge-success">True</span>
          <% } else if (reminderItem.Completed == false) { %>
            <span class="badge badge-danger">False</span>
          <% } %>
        </h4>

        <a class="btn btn-warning" href=<%= "/reminder/" + reminderItem.ReminderID + "/edit" %>>Edit</a>

        <form class="deleteForm "method="POST" action=<%= "/reminder/delete/" + reminderItem.ReminderID %>>
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>

      </li>
    </ul>

</div>
